<div class="card">
  <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between align-itens-center">
    <h1>New review for <%= @restaurant.name %></h1>
    <%= link_to 'Back to restaurant page', restaurant_path(@restaurant), class: "text-white" %>
  </div>
  <div class="card-body">
    <%= simple_form_for  [@restaurant, @review] do |f| %>
      <%= f.input :rating, collection: 0..5, label: 'Insert rating here' %>
      <%= f.input :content, label: 'Insert review here' %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>  